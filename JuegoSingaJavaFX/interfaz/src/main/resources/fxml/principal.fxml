<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.pantalla.principal.PrincipalController">
   <top>
      <MenuBar fx:id="menu" BorderPane.alignment="CENTER">
        <menus>
<!--            un menu para guardar, pausar y salir que sean las opciones de la partida-->
<!--            otro menu para moverse entre las pantallas, ir a home, ir a la mazmorra, etc..-->
<!--            about-->
            <Menu fx:id="menuPausa" mnemonicParsing="false" text="Opciones">
                <items>
                    <MenuItem fx:id="menuPausaPausar" onAction="#pausar" mnemonicParsing="false" text="Pausar" />
                    <MenuItem fx:id="menuPausaGuardar" onAction="#guardar" mnemonicParsing="false" text="Guardar" />
                    <MenuItem fx:id="menuPausaSalir" onAction="#salir" mnemonicParsing="false" text="Salir" />
                    <MenuItem fx:id="menuPausaMenuPrincipal" onAction="#menuPrincipal" mnemonicParsing="false" text="Menu Principal" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Reviews">
                <items>
                   <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
